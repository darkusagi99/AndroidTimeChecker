<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9A9A9"
    tools:context=".TimeCheckerActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/morningStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="@string/morning_start_content"
            android:inputType="time" />

        <Button
            android:id="@+id/morningStartButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="7:00"
            android:onClick="clickTimePicker"
            android:tag="morningStartButton" />

        <TextView
            android:id="@+id/morningEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="@string/morning_end_content"
            android:inputType="time" />

        <Button
            android:id="@+id/morningEndButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="7:00"
            android:onClick="clickTimePicker"
            android:tag="morningEndButton" />

        <TextView
            android:id="@+id/morningDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="--"
            android:inputType="time" />

        <TextView
            android:id="@+id/afternoonStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="@string/afternoon_start_content"
            android:inputType="time" />

        <Button
            android:id="@+id/afternoonStartButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="7:00"
            android:onClick="clickTimePicker"
            android:tag="afternoonStartButton" />

        <TextView
            android:id="@+id/lunchDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="--"
            android:inputType="time" />

        <TextView
            android:id="@+id/afternoonEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="--"
            android:inputType="time" />

    </LinearLayout>

</FrameLayout>